<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jfteam.dao.UserMapper">
    <resultMap id="UserVOResultMap" type="org.jfteam.vo.UserVO">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="findOne" resultMap="UserVOResultMap" parameterType="integer">
        select * from t_sys_user t
        <where>
            <choose>
                <when test="id != null and id != ''">
                    id = #{id}
                </when>
                <otherwise>
                    id = -1
                </otherwise>
            </choose>
        </where>
    </select>
    <insert id="insert" parameterType="UserVO" useGeneratedKeys="true" keyProperty="id">
        insert into t_sys_user
        (
          username,
          password,
          nickname
        )
        values
        (
          #{username},
          #{password},
          #{nickname}
        )
    </insert>
</mapper>